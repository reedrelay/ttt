#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'ttt'

game = TicTacToe::Game.new(STDOUT)
game.start
game.set_player(gets)

if game.player_goes_first
  game.make_move(gets)
  game.show_board
end

while(!game.over?)
  game.opponent_move
  game.show_board
  game.make_move(gets)
  game.show_board
end

game.show_end_state
